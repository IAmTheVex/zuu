{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        // "rootDir": "./src",
        "outDir": "build",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "test",
        "tmp",
        "temp",
        "build",
        "node_modules"
    ]
}
