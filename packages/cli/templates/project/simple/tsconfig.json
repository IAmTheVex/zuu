{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "dom",
            "es2016",
            "es2017",
            "es5",
            "es6",
            "esnext.asynciterable"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}